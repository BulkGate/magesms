                </resource>
                <resource id="BulkGate_Magesms::magesms" title="Mage SMS" sortOrder="500">
                    <resource id="BulkGate_Magesms::magesms_dashboard" title="Dashboard" />
                    <resource id="BulkGate_Magesms::magesms_sendsms" title="Send SMS" />
